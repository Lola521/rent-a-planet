<h3>Mon compte</h3>

<div class="contenaire">
  <div class="card_user">
    <div class="user_image">
    </div>
    <div class="user_bio">
      <p>Nom : <%= @user.first_name %></p>
      <p>Prénom : <%= @user.last_name %></p>
      <p>Email : <%= @user.email%></p>
    </div>
    <div class="user_infos">
      <h5>Ma biographie</h5>
      <p><%= @user.biographie %></p>
    </div>
  </div>

  <div class="locations">
    <div class="planet_owner">
      <div>
       <div>Mes planètes</div>
       <div>
          <% @current_user.planets.each do |planet|%>
            <div class="container_infos">
              <div class="container_links">
                <%= link_to planet_path(planet) do %>
                  <%= planet.name %>
                <%end%>
              </div>
              <div class="container_links">
                <%= link_to "supprimer", planet_path(planet) %>
              </div>
              <div class="container_links">
                Update
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class='btn btn-flat' id='btn-creer'><%= link_to "Créer planète", "../planets/new" %></div>
    <div class="planet_user">
      <div>
        <div>Mes réservations</div>
        <% @current_user.locations.each do |location|%>
          <div class="container_infos">
            <div class="container_links">
              <%= location.planet['name'] %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
